{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      // THIS IS THE ONLY ALIAS WE NEED
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    // Explicitly include types for Node.js globals and Jest testing environment
    "types": ["node", "jest"]
  },
  // We only include files directly related to the application source code.
  "include": ["src/**/*.ts"], 
  // We explicitly exclude test files, as they should only be run by Jest/ts-jest.
  "exclude": ["node_modules", "dist", "tests/**/*.ts"] 
}